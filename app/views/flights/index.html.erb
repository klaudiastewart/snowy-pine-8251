<h2>All Flights:</h2>
<ul>
  <% @flights.each do |flight| %>
    <li id="flight-<%= flight.id %>">
      <%= flight.number %>,
      <%= flight.airline.name %><br>
      Passengers: <% flight.passengers.each do |passenger| %>
        <p id="passenger-<%= passenger.id %>"><%= passenger.name %>
          <%= button_to "Remove #{passenger.name}", "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %>
        </p>
      <% end %>
    </li>
  <% end %>
</ul>
